  "version": "1.0.0",
  "type": "module",
  "description": "NovaTech Solutions - Demo project for Advanced Claude Code course",
  "scripts": {
    "dev": "npx serve src -l 3000",
    "lint": "eslint src/js/",
    "lint:fix": "eslint src/js/ --fix",
    "format": "prettier --write \"src/**/*.{html,css,js}\"",
    "format:check": "prettier --check \"src/**/*.{html,css,js}\"",
    "test": "npm run test:unit && npm run test:e2e",
